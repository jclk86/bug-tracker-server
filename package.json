{
  "name": "chimuwaku-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r ts-node/register src/server.ts",
    "dev": "nodemon --config nodemon.json --inspect-brk src/server.ts",
    "build": "tsc",
    "test:dev": "nodemon --config nodemon.json --watch . --ext ts --exec \"mocha -r ts-node/register src/__tests__/**/*.test.ts\"",
    "knex:migrate:make": "node -r ts-node/register -r dotenv/config ./node_modules/knex/bin/cli.js migrate:make",
    "knex:migrate:latest": "node -r  ts-node/register -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest",
    "knex:migrate:rollback": "node -r ts-node/register -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc src/**/*.ts --write",
    "prettier:watch": "onchange src/**/*.ts -- prettier --write {{changed}}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "yarn run prettier:format",
      "yarn eslint:fix",
      "git add ."
    ]
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.95.4",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/pg": "^7.14.11",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}
